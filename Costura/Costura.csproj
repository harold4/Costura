<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  
  <Import Project="$(MSBuildThisFileDirectory)FodyPackagind.props"/>

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)key.snk</AssemblyOriginatorKeyFile>
    <Authors>https://github.com/Fody/Costura/graphs/contributors</Authors>
    <Description>Fody add-in for embedding references as resources.</Description>
    <PackageTags>ILMerge, ILWeaving, Embed, Resource, Fody, Cecil</PackageTags>
    <PackageOutputPath>$(SolutionDir)nugets</PackageOutputPath>
    <PackageIconUrl>https://raw.githubusercontent.com/Fody/Costura/master/package_icon.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/Fody/Costura</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Fody" Version="6.0.0" PrivateAssets="none" />
  </ItemGroup>

  <Import Project="$(MSBuildThisFileDirectory)FodyPackagind.targets"/>
</Project>